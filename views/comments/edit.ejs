<%- include('../partials/header') %>
<div class="ui text container">
  <h1 class="ui header">YelpCamp</h1>
  <form
    class="ui form"
    action="/campgrounds/<%= camp %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label for="">Author</label>
      <input type="text" name="comment[author.username]" value="<%- comment.author.username %>" />
    </div>
 
    <div class="field">
      <label for="">Descripton</label>
      <textarea type="text" name="comment[text]">
        <%- comment.text %>
      </textarea>
    </div>
    <input class="ui button" type="submit" />
  </form>
</div>
<%- include('../partials/footer') %>
